<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_disconnect"
    android:orientation="vertical"
    tools:context=".AlcoholActivity">
    <!--    // 상단 고정-->

    <TextView
        android:id="@+id/connectName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmju"
        android:gravity="center"
        android:text="연결 기기 명"
        android:textColor="#000000"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/nowState"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@drawable/bluetooth" />

        <TextView
            android:id="@+id/alcoholText"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmju"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/state"
                android:layout_width="230dp"
                android:layout_height="146dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bmju"
                android:text="비연결 상태"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40sp" />

            <LinearLayout
                android:id="@+id/btn_back"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/button1_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_cal" />

                    <TextView
                        android:id="@+id/button1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="계산"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/button2_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_statis" />

                    <TextView
                        android:id="@+id/button2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="음주 통계"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/button3_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_info" />

                    <TextView
                        android:id="@+id/button3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="사용자 통계"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/state_eval"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmju"
            android:includeFontPadding="false"
            android:text="블루투스 연결 후 재로그인"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>