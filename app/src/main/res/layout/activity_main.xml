<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_disconnect"

    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--    // 상단 고정-->

    <TextView
        android:id="@+id/connectName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmju"
        android:gravity="center"
        android:text="연결 기기 명"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nowState"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@drawable/bluetooth" />

        <TextView
            android:id="@+id/alcoholText"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmju"
            android:text="알콜 도수"
            android:textColor="#000000"
            android:textSize="60sp" />


        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmju"
            android:text="비연결 상태"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/state_eval"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmju"
            android:includeFontPadding="false"
            android:text="탭해서 블루투스 연결"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>